---
import i18next,{ t } from "i18next";
import { LanguageSelector} from "astro-i18next/components";
let lang = i18next.language;
if(lang == "es"){
  lang = "/";
}
if(lang == "en"){
  lang = "/en/";
}
if(lang == "fr"){
  lang = "/fr/";
}

---

<nav class="navbar limite">
    <div class="logo">
        <a href={lang}>
            <img src="/hoteles-con-encanto-logo.svg" alt="Hoteles con encanto de zihuatanejo">
        </a>
    </div>
    <ul>
        <li><a href=`${lang}#hoteles` class="selected">{t("menu.hoteles")}</a></li>
        <li><a href=`${lang}#zihua`>Zihuatanejo</a></li>
        <li><a href=`${lang}#ofertas`>{t("menu.ofertas")} </a></li>
        <li class="select"><LanguageSelector showFlag={false} class="languages" /></li>
    </ul>
</nav>

<script>
    import gsap from "gsap"
    let tl = gsap.timeline({repeat:0})
  tl.from(".logo",
  {
    y:50,
    opacity: 0,
    duration: 1 //1 segundo
  })
  tl.from (".navbar ul li",{
    stagger:0.1,
    y:100,
    opacity: 0,
    duration: 1 
  }, "-=.5")
  
  </script>