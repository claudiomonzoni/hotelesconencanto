---
export interface Props {
  titulo: string;
  descripcion: string;
  imagen: string;
}

const { titulo, descripcion, imagen } = Astro.props;
---

<div id="hero-sec" class="limite">
  <div class="izq">
    <div class="bandeja">
      <h1>{titulo}</h1>
      <p>
        {descripcion}
      </p>
    </div>
  </div>
  <div class="der">
      <img src={imagen} alt={titulo} />
  </div>
</div>

<style lang="scss">
  @import "../estilos/_variables.scss";
  #hero-sec {
    display: flex;
    flex-wrap: wrap;
  }
  .izq {
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
    @include cel{
        flex: 1 0 100%;
        order: 2;
        padding: 1rem;
        margin-bottom: -50px;
        .bandeja{
            transform: translateX(0px) !important;
            transform: translateY(-40px) !important;
            padding: 2rem!important;
        }
    }
    .bandeja {
        background: #fff;
        padding: 3rem;
        transform: translateX(30px);
        border-radius: $radio;
        box-shadow: -3px 0px 15px -6px rgba(54, 54, 54, 0.62);
        -webkit-box-shadow: -3px 0px 15px -6px rgba(54, 54, 54, 0.62);
        -moz-box-shadow: -3px 0px 15px -6px rgba(54, 54, 54, 0.62);
    }
}
.der{
      flex: 2;
      @include cel{
        flex: 1 0 100%;
    }
      img {
      width: 100%;
      object-fit: cover;
    }

  }
</style>
